
u-boot: u-boot-r5 u-boot-a53

u-boot_clean: u-boot-a53_clean u-boot-r5_clean

u-boot-a53:
	@echo ===================================
	@echo    Building U-boot for A53
	@echo ===================================
	mkdir -p $(TI_SDK_PATH)/board-support/u-boot-build/a53
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm $(UBOOT_MACHINE) O=$(TI_SDK_PATH)/board-support/u-boot-build/a53
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm CROSS_COMPILE=$(CROSS_COMPILE) \
		BINMAN_INDIRS=$(TI_LINUX_FIRMWARE) BL31=$(UBOOT_ATF) TEE=$(UBOOT_TEE) O=$(TI_SDK_PATH)/board-support/u-boot-build/a53

u-boot-a53_clean:
	@echo ===================================
	@echo    Cleaning U-boot for A53
	@echo ===================================
	$(MAKE) -C $(UBOOT_SRC_DIR) CROSS_COMPILE=$(CROSS_COMPILE) O=$(TI_SDK_PATH)/board-support/u-boot-build/a53 \
		distclean

u-boot-r5:
	@echo ===================================
	@echo    Building U-boot for R5
	@echo ===================================
	mkdir -p $(TI_SDK_PATH)/board-support/u-boot-build/r5
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm $(UBOOT_MACHINE_R5) O=$(TI_SDK_PATH)/board-support/u-boot-build/r5
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm CROSS_COMPILE=$(CROSS_COMPILE_ARMV7) \
		BINMAN_INDIRS=$(TI_LINUX_FIRMWARE)  O=$(TI_SDK_PATH)/board-support/u-boot-build/r5

u-boot-r5_clean:
	@echo ===================================
	@echo    Cleaning U-boot for R5
	@echo ===================================
	$(MAKE) -C $(UBOOT_SRC_DIR) CROSS_COMPILE=$(CROSS_COMPILE_ARMV7) O=$(TI_SDK_PATH)/board-support/u-boot-build/r5 \
		distclean


u-boot_stage:
	mkdir -p $(TI_SDK_PATH)/board-support/built-images
	cp $(TI_SDK_PATH)/board-support/u-boot-build/a53/tispl.bin $(TI_SDK_PATH)/board-support/built-images/tispl.bin
	cp $(TI_SDK_PATH)/board-support/u-boot-build/a53/u-boot.img $(TI_SDK_PATH)/board-support/built-images/u-boot.img
	cp $(TI_SDK_PATH)/board-support/u-boot-build/r5/tiboot3*.bin $(TI_SDK_PATH)/board-support/built-images/
ifeq ($(SOC), $(filter $(SOC), j721e am65x))
	cp $(UBOOT_SRC_DIR)/sysfw-$(SOC)-evm.itb $(TI_SDK_PATH)/board-support/built-images/sysfw.itb
endif

u-boot_install: u-boot_stage
	@echo ===================================
	@echo    Installing U-boot
	@echo ===================================
	@if [ -z $(DESTDIR) ] || [ ! -d $(DESTDIR) ] ; then \
		echo "The extracted boot filesystem directory doesn't exist."; \
		echo "Please try again with BOOTFS=<boot-filesystem-dir>"; \
		exit 1; \
	fi
	cp $(TI_SDK_PATH)/board-support/built-images/tispl.bin $(DESTDIR)
	cp $(TI_SDK_PATH)/board-support/built-images/u-boot.img $(DESTDIR)
	cp $(TI_SDK_PATH)/board-support/built-images/tiboot3*.bin $(DESTDIR)
ifeq ($(SOC), $(filter $(SOC), j721e am65x))
	cp $(TI_SDK_PATH)/board-support/built-images/sysfw.itb $(DESTDIR)
endif
