
u-boot: u-boot-a53 u-boot-r5

u-boot_clean: u-boot-a53_clean u-boot-r5_clean

u-boot-a53:
	@echo ===================================
	@echo    Building U-boot for A53
	@echo ===================================
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm $(UBOOT_MACHINE)
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm CROSS_COMPILE=$(CROSS_COMPILE) \
		BINMAN_INDIRS=$(TI_LINUX_FIRMWARE) BL31=$(UBOOT_ATF) TEE=$(UBOOT_TEE)

u-boot-a53_clean:
	@echo ===================================
	@echo    Cleaning U-boot for A53
	@echo ===================================
	$(MAKE) -C $(UBOOT_SRC_DIR) CROSS_COMPILE=$(CROSS_COMPILE) \
		distclean

u-boot-r5:
	@echo ===================================
	@echo    Building U-boot for R5
	@echo ===================================
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm $(UBOOT_MACHINE_R5)
	$(MAKE) -j $(MAKE_JOBS) -C $(UBOOT_SRC_DIR) ARCH=arm CROSS_COMPILE=$(CROSS_COMPILE_ARMV7) \
		BINMAN_INDIRS=$(TI_LINUX_FIRMWARE)

u-boot-r5_clean:
	@echo ===================================
	@echo    Cleaning U-boot for R5
	@echo ===================================
	$(MAKE) -C $(UBOOT_SRC_DIR) CROSS_COMPILE=$(CROSS_COMPILE_ARMV7) \
		distclean


u-boot_stage:
	mkdir -p $(STAGING_DIR)
	cp $(UBOOT_SRC_DIR)/tispl.bin $(STAGING_DIR)/tispl.bin
	cp $(UBOOT_SRC_DIR)/u-boot.img $(STAGING_DIR)/u-boot.img
	cp $(UBOOT_SRC_DIR)/tiboot3.bin $(STAGING_DIR)/tiboot3.bin
ifeq ($(SOC), $(filter $(SOC), j721e am65x))
	cp $(UBOOT_SRC_DIR)/sysfw-$(SOC)-evm.itb $(STAGING_DIR)/sysfw.itb
endif

u-boot_install: u-boot_stage
	@echo ===================================
	@echo    Installing U-boot
	@echo ===================================
	@if [ -z $(BOOTFS) ] || [ ! -d $(BOOTFS) ] ; then \
		echo "The extracted boot filesystem directory doesn't exist."; \
		echo "Please try again with BOOTFS=<boot-filesystem-dir>"; \
		exit 1; \
	fi
	cp $(STAGING_DIR)/tispl.bin $(BOOTFS)
	cp $(STAGING_DIR)/u-boot.img $(BOOTFS)
	cp $(STAGING_DIR)/tiboot3.bin $(BOOTFS)
ifeq ($(SOC), $(filter $(SOC), j721e am65x))
	cp $(STAGING_DIR)/sysfw.itb $(BOOTFS)
endif

