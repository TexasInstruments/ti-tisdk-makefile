# Kernel build targets
linux-extras: linux-extras-dtbs
	@echo =================================
	@echo     Building the Linux Kernel
	@echo =================================
	$(MAKE) -C $(LINUXEXTRASKERNEL_INSTALL_DIR) ARCH=arm64 CROSS_COMPILE=$(CROSS_COMPILE) defconfig ti_arm64_prune.config
	$(MAKE) -j $(MAKE_JOBS) -C $(LINUXEXTRASKERNEL_INSTALL_DIR) ARCH=arm64 CROSS_COMPILE=$(CROSS_COMPILE)  Image
	$(MAKE) -j $(MAKE_JOBS) -C $(LINUXEXTRASKERNEL_INSTALL_DIR) ARCH=arm64 CROSS_COMPILE=$(CROSS_COMPILE) modules

linux-extras_stage: linux-extras-dtbs_stage
	mkdir -p $(TI_SDK_PATH)/board-support/built-images
# ifneq ($(SOC_TYPE),gp)
# 	$(TI_SECURE_DEV_PKG)/scripts/secure-binary-image.sh $(LINUXEXTRASKERNEL_INSTALL_DIR)/arch/arm64/boot/Image $(TI_SDK_PATH)/board-support/built-images/Image.sec
# 	cp $(TI_SDK_PATH)/board-support/prebuilt-images/fitImage.its $(TI_SDK_PATH)/board-support/built-images
# 	cd $(TI_SDK_PATH)/board-support/built-images; \
# 	mkimage -f fitImage.its -r fitImage
# else
	cp $(LINUXEXTRASKERNEL_INSTALL_DIR)/arch/arm64/boot/Image $(TI_SDK_PATH)/board-support/built-images
# endif

linux-extras_install: linux-extras_stage linux-extras-dtbs_install
	@echo ===================================
	@echo     Installing the Linux Kernel
	@echo ===================================
	@if [ ! -d $(DESTDIR) ] ; then \
		echo "The extracted target filesystem directory doesn't exist."; \
		echo "Please run setup.sh in the SDK's root directory and then try again."; \
		exit 1; \
	fi
	install -d $(DESTDIR)/boot
# ifneq ($(SOC_TYPE),gp)
# 	install $(TI_SDK_PATH)/board-support/built-images/fitImage $(DESTDIR)/boot
# else
	install $(TI_SDK_PATH)/board-support/built-images/Image $(DESTDIR)/boot
# endif
	install $(LINUXEXTRASKERNEL_INSTALL_DIR)/vmlinux $(DESTDIR)/boot
	install $(LINUXEXTRASKERNEL_INSTALL_DIR)/System.map $(DESTDIR)/boot
	$(MAKE) -C $(LINUXEXTRASKERNEL_INSTALL_DIR) ARCH=arm64 CROSS_COMPILE=$(CROSS_COMPILE) INSTALL_MOD_PATH=$(DESTDIR) INSTALL_MOD_STRIP=$(INSTALL_MOD_STRIP) modules_install

linux-extras_clean:
	@echo =================================
	@echo     Cleaning the Linux Kernel
	@echo =================================
	$(MAKE) -C $(LINUXEXTRASKERNEL_INSTALL_DIR) ARCH=arm64 CROSS_COMPILE=$(CROSS_COMPILE) mrproper
